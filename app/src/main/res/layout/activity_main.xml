<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/headerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Анализатор структур данных"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="#009688"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/headerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Задайте длину списков:"
        android:textColor="#009688"
        android:textSize="17sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerOne"/>
    <EditText
        android:id="@+id/input"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:background="#E7E4EC"
        android:ems="10"
        android:inputType="number"
        android:hint="Введите число"
        android:textSize="19sp"
        android:textStyle="italic"
        android:textColor="#009688"
        android:textColorHint="#7AB6B1"
        android:gravity="center"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerTwo"/>
    <Button
        android:id="@+id/button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:backgroundTint="#009688"
        android:text="Анализ"
        android:layout_margin="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input"/>
    <TextView
        android:id="@+id/output"
        android:layout_width="320dp"
        android:layout_height="460dp"
        android:background="#F0F0F1"
        android:layout_marginTop="14dp"
        android:text="Выходные данные"
        android:padding="10dp"
        android:textColor="#009688"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"/>
</androidx.constraintlayout.widget.ConstraintLayout>